<!-- Mobile overlay -->
<div id="sidebarOverlay" class="fixed inset-0 bg-black/40 z-40 hidden lg:hidden" onclick="toggleSidebar()"></div>

<!-- Sidebar -->
<aside id="sidebar" class="fixed lg:static inset-y-0 left-0 z-50 w-64 bg-white dark:bg-gray-900 border-r border-gray-200 dark:border-gray-800 flex flex-col min-h-screen transform -translate-x-full lg:translate-x-0 transition-transform duration-200">
  <div class="p-6 border-b border-gray-200 dark:border-gray-800 flex items-center gap-3">
    <% if (typeof siteSettings !== 'undefined' && siteSettings.logo_url) { %>
      <img src="<%= siteSettings.logo_url %>" alt="Logo" class="w-9 h-9 rounded-xl object-cover">
    <% } else { %>
      <div class="w-9 h-9 rounded-xl flex items-center justify-center text-white font-bold text-sm" style="background-color: <%= (typeof siteSettings !== 'undefined' && siteSettings.primary_color) || '#0ea5e9' %>">
        <%= (typeof siteSettings !== 'undefined' && siteSettings.site_short) ? siteSettings.site_short.charAt(0) : 'C' %>
      </div>
    <% } %>
    <div class="flex-1 min-w-0">
      <h1 class="text-sm font-bold text-gray-900 dark:text-gray-100 truncate"><%= (typeof siteSettings !== 'undefined' && siteSettings.site_short) || 'CSS' %></h1>
      <p class="text-xs text-gray-500 dark:text-gray-400 leading-tight truncate"><%= (typeof siteSettings !== 'undefined' && siteSettings.site_name) || 'Credit Submission System' %></p>
    </div>
    <!-- Close button on mobile -->
    <button onclick="toggleSidebar()" class="lg:hidden p-1 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800">
      <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
    </button>
  </div>

  <nav class="flex-1 p-4 space-y-1 overflow-y-auto">
    <a href="/dashboard/analytics" class="flex items-center gap-3 px-4 py-2.5 rounded-xl text-sm font-medium transition-colors
      <%= typeof page !== 'undefined' && page === 'analytics' ? 'bg-primary-50 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300' : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800' %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/></svg>
      Analytics
    </a>
    <a href="/dashboard/cases" class="flex items-center gap-3 px-4 py-2.5 rounded-xl text-sm font-medium transition-colors
      <%= typeof page !== 'undefined' && page === 'cases' ? 'bg-primary-50 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300' : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800' %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
      Case List
    </a>
    <% if (typeof user !== 'undefined' && user && (user.role === 'masteragent' || user.role === 'subagent')) { %>
    <a href="/dashboard/submit-new" class="flex items-center gap-3 px-4 py-2.5 rounded-xl text-sm font-medium transition-colors
      <%= typeof page !== 'undefined' && page === 'submit' ? 'bg-primary-50 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300' : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800' %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
      New Submission
    </a>
    <a href="/dashboard/drafts" class="flex items-center gap-3 px-4 py-2.5 rounded-xl text-sm font-medium transition-colors
      <%= typeof page !== 'undefined' && page === 'drafts' ? 'bg-primary-50 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300' : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800' %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
      Drafts
    </a>
    <% } %>
    <% if (typeof user !== 'undefined' && user && (user.role === 'admin' || user.role === 'superadmin')) { %>
    <a href="/dashboard/taken-cases" class="flex items-center gap-3 px-4 py-2.5 rounded-xl text-sm font-medium transition-colors
      <%= typeof page !== 'undefined' && page === 'taken-cases' ? 'bg-primary-50 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300' : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800' %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/></svg>
      Taken Cases
    </a>
    <% } %>
    <% if (typeof user !== 'undefined' && user && user.role !== 'subagent') { %>
    <a href="/dashboard/users" class="flex items-center gap-3 px-4 py-2.5 rounded-xl text-sm font-medium transition-colors
      <%= typeof page !== 'undefined' && page === 'users' ? 'bg-primary-50 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300' : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800' %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z"/></svg>
      User Management
    </a>
    <% } %>
    <% if (typeof user !== 'undefined' && user && user.role === 'superadmin') { %>
    <a href="/dashboard/settings" class="flex items-center gap-3 px-4 py-2.5 rounded-xl text-sm font-medium transition-colors
      <%= typeof page !== 'undefined' && page === 'settings' ? 'bg-primary-50 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300' : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800' %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
      Settings
    </a>
    <a href="/dashboard/settings/templates" class="flex items-center gap-3 px-4 py-2.5 rounded-xl text-sm font-medium transition-colors
      <%= typeof page !== 'undefined' && page === 'templates' ? 'bg-primary-50 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300' : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800' %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/></svg>
      Loan Products
    </a>
    <% } %>
  </nav>

  <div class="p-4 border-t border-gray-200 dark:border-gray-800">
    <a href="/auth/logout" class="flex items-center gap-3 px-4 py-2.5 rounded-xl text-sm font-medium text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/></svg>
      Logout
    </a>
  </div>
</aside>

<script>
function toggleSidebar() {
  const sidebar = document.getElementById('sidebar');
  const overlay = document.getElementById('sidebarOverlay');
  sidebar.classList.toggle('-translate-x-full');
  overlay.classList.toggle('hidden');
}
</script>
